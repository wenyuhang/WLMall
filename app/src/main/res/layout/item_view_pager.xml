<?xml version="1.0" encoding="utf-8"?>
<com.wl.wlmall.desgin.LoveAnimator xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_love_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wl.wlmall.desgin.imageWatcher.FullScreenVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false"
        />

    <ImageView
        android:id="@+id/img_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:clickable="false"
        android:focusable="false"
        android:visibility="visible"
        />



    <TextView
        android:id="@+id/recy_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="女生爱不爱你，测试一下就知道啦"
        android:textColor="@color/white_a_color"
        android:textSize="14sp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recy_img_header"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/header_icon_2"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="2dp"
        android:layout_marginBottom="40dp"
        android:layout_alignLeft="@id/recy_tv_title"
        android:layout_alignParentBottom="true"
         />

    <TextView
        android:id="@+id/recy_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="恋爱浪花"
        android:textColor="@color/white_a_color"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_alignTop="@id/recy_img_header"
        android:layout_toRightOf="@id/recy_img_header"
        />


    <TextView
        android:id="@+id/recy_btn_heart"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:drawableTop="@mipmap/heart_icon"
        android:layout_marginTop="16dp"
        android:text="0"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/recy_btn_comment"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:drawableTop="@mipmap/msg_icon"
        android:layout_marginTop="16dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_below="@id/recy_btn_heart"
        android:layout_alignRight="@id/recy_btn_heart"
        />

    <TextView
        android:id="@+id/recy_btn_share"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:drawableTop="@mipmap/share_icon"
        android:layout_marginTop="16dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_below="@id/recy_btn_comment"
        android:layout_alignRight="@id/recy_btn_heart"
        />

</com.wl.wlmall.desgin.LoveAnimator>