<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white_a_color"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp"
    >
<View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/gray_h_color"
    ></View>
    <android.support.v7.widget.CardView
        android:id="@+id/recy_cardview"
        android:layout_width="360dp"
        android:layout_height="190dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="5dp"
        >
        <!--<ImageView-->
            <!--android:id="@+id/recy_img"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:scaleType="fitXY"-->
            <!--android:src="@mipmap/test"-->
            <!--/>-->
        <cn.jzvd.JzvdStd
            android:id="@+id/recy_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/recy_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:layout_below="@id/recy_cardview"
        android:text="标题"
        android:layout_marginTop="5dp"
        android:textColor="@color/black_a_color"
        android:textStyle="italic|bold"
        android:textSize="13sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recy_img_header"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/recy_tv_title"
        android:src="@mipmap/header_icon_2"
        />

    <TextView
        android:id="@+id/recy_tv_name"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:lines="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:textSize="11sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="昵称"
        android:layout_below="@id/recy_tv_title"
        android:layout_toRightOf="@id/recy_img_header"
        />

    <TextView
        android:id="@+id/recy_tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="0"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/recy_tv_title"
        android:drawableLeft="@mipmap/icon_comment"
        android:drawablePadding="5dp"
        />

    <TextView
        android:id="@+id/recy_tv_praise"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="0"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/recy_tv_title"
        android:layout_toLeftOf="@id/recy_tv_comment"
        android:drawableLeft="@mipmap/icon_heart"
        android:drawablePadding="5dp"
        />
</RelativeLayout>